<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video Meeting</title>
    <link rel="icon" type="image/x-icon" href="https://img.icons8.com/?size=100&id=YOhdE1LDn243&format=png&color=000000">
    <style>
      /* styles.css */
      body {
        margin: 0;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: aquamarine;
        position: relative;
        flex-direction: column;
      }

      .row {
        display: flex;
        flex-direction: row;
      }

      .navbar {
        width: 100%;
        background-color: #333;
        overflow: hidden;
        position: absolute;
        top: 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 20px; /* Add some padding for spacing */
        box-sizing: border-box;
      }

      .active {
        text-decoration: none;
        background-color: #ddd;
        color: black;
      }
      .navbar a {
        display: block;
        /* color: white; */
        /* color: white; */
        text-align: center;
        padding: 14px 20px;
        text-decoration: none;
      }

      .navbar a:hover {
        background-color: #ddd;
        color: black;
      }

      .logout-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #dc3545;
        color: white;
        cursor: pointer;
        font-size: 16px;
      }

      .logout-btn a {
        text-decoration: none;
        color: white;
      }

      .logout-btn:hover {
        background-color: #c82333;
      }

      .container {
        text-align: center;
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 60px; /* Add margin to prevent overlap with navbar */
      }

      h1 {
        margin-bottom: 20px;
      }

      .form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .form-group {
        margin-bottom: 20px;
      }

      input[type="text"] {
        width: 200px;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }

      button {
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        font-size: 16px;
      }

      button:hover {
        background-color: #0056b3;
      }

      .divider {
        margin: 20px 0;
        font-weight: bold;
        color: #888;
      }
    </style>
  </head>
  <body>
    <div class="navbar">
      <div class="row">
        <a href="/home" class="active">Home</a>
        <a href="/chat" style="color: white">Chat</a>
      </div>
      <button class="logout-btn">
        <a href="/logout">Logout</a>
      </button>
    </div>
    <div class="container">
      <h1>Welcome to SyncMate</h1>
      <div class="form-container">
        <div class="form-group">
          <label for="room-code">Enter Room Code</label>
          <input type="text" id="room-code" placeholder="Room Code" />
          <button id="join-room">Join Room</button>
        </div>
        <div class="divider">OR</div>
        <div class="form-group">
          <button id="create-room">Create New Room</button>
        </div>
      </div>
    </div>
    <script>
      // script.js
      document.getElementById("join-room").addEventListener("click", () => {
        const roomCode = document.getElementById("room-code").value;
        if (roomCode) {
          window.location.href = `/${roomCode}`;
        } else {
          alert("Please enter a room code.");
        }
      });

      document.getElementById("create-room").addEventListener("click", () => {
        window.location.href = "/create";
      });
    </script>
  </body>
</html>
